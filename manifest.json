{
  "manifest_version": 3,
  "name": "BeatScript",
  "version": "1.0",
  "description": "Extract song information and lyrics from YouTube videos",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "http://localhost:8000/*",
    "https://localhost:8000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "css": ["styles.css"],
      "js": ["content.js"]
    }
  ]
} 